<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#56C2C1"
    android:padding="20dp"
    android:gravity="center_horizontal"
    tools:context=".ResultActivity">


    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/boy"/>

    <TextView
        android:id="@+id/correct"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correct Answer"
        android:background="#25FF59"
        android:textSize="35sp"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/wrong"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wrong Answer"
        android:background="#FF5C25"
        android:textSize="35sp"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/total"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Answer"
        android:background="#FFC107"
        android:textSize="35sp"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"/>


    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="20dp">


        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/circularProgressbar"
            app:cpb_background_progressbar_color="#DC2517"
            app:cpb_background_progressbar_width="12dp"
            app:cpb_progress_direction="to_right"
            app:cpb_progress_max="3"
            app:cpb_progressbar_color="#1BBD22"
            app:cpb_progressbar_width="12dp"
            app:cpb_round_border="false"/>

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="3"
            android:textColor="#FF7040"
            android:textSize="50sp"
            android:textStyle="bold"/>


    </RelativeLayout>
    <Button
        android:id="@+id/home"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        android:backgroundTint="#69F0AE"
        android:layout_below="@id/circularProgressbar"
        android:layout_centerHorizontal="true"/>
</LinearLayout>