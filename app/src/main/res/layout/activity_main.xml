<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="#03A9F4"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="#03A9F4"
        android:title=""
        android:titleTextColor="@color/white" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="0dp"
                android:text="Select a Subject"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Start your coding journey"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="220dp"
            android:src="@drawable/splash_image" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Java and Kotlin Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_margin="12dp">

                <!-- Java Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/javacard"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#ADAFAAA4"
                    android:onClick="java">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/javaImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/java" />

                        <TextView
                            android:id="@+id/javaText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JAVA"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Kotlin Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/kotlinCard"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#ADAFAAA4"
                    android:onClick="kotlin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/kotlinImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/kotlin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kotlin"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Python and C++ Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_margin="12dp">

                <!-- Python Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/pythonCard"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#ADAFAAA4"
                    android:onClick="python">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/pythonImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/python" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Python"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- C++ Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cppCard"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#ADAFAAA4"
                    android:onClick="cpp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/cppImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/cplus" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="C++"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <!-- Dart, HTML, and C Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_margin="12dp">

                <!-- Dart Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/dartCard"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#ADAFAAA4"
                    android:onClick="dart">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/dartImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/dart" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dart"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- HTML Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/htmlCard"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#ADAFAAA4"
                    android:onClick="html">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/htmlImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/html" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HTML"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- C Language Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_margin="12dp">

                <!-- C Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cCard"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#ADAFAAA4"
                    android:onClick="clang">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/cImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/clanguage" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="C Language"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Additional Cards (Dart, HTML, etc.) -->
            <!-- Add similar blocks for Dart, HTML, C, and other cards -->
        </LinearLayout>
    </ScrollView>
</LinearLayout>